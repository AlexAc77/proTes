<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Vista.ProductoView.VistaProductoDetalles"
    tools:showIn="@layout/activity_vista_producto_detalles">
    <TextView
        android:id="@+id/lblProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir Producto"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:textSize="20dp" />
    <ImageView
        android:id="@+id/imgFotoProducto"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_add_a_photo_black_24dp"
        android:layout_margin="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:inputType="text"
        android:hint="Nombre del Producto"
        android:id="@+id/txtNombreProductoDetalle"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:inputType="text"
        android:hint="Descripción"
        android:id="@+id/txtDescripcionProductoDetalle"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:hint="Precio"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrecioProductoDetaalle"/>

    <Button
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:id="@+id/btnProductoDetalle"
        android:text="Añadir Producto"/>

</LinearLayout>